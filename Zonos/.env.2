# Zonos 백엔드 환경 변수 템플릿
# 이 파일을 복사해서 .env 파일을 만들고 실제 값을 입력하세요

# AI 서비스 설정 (필수)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Firebase Admin SDK 설정 (선택사항)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=info

# CORS 설정
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:5173"]

# eSpeak 설정 (운영체제별로 수정 필요)
# Windows:
ESPEAK_NG_PATH=C:\Program Files\eSpeak NG\espeak-ng-data
ESPEAK_NG_LIBRARY_PATH=C:\Program Files\eSpeak NG
# Linux/macOS:
# ESPEAK_NG_PATH=/usr/lib/x86_64-linux-gnu/espeak-ng-data
# ESPEAK_NG_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu

# Zonos 모델 설정
DEFAULT_TTS_MODEL=Zyphra/Zonos-v0.1-transformer
ENABLE_MODEL_CACHING=true
MAX_MODEL_CACHE_SIZE=2

# 오디오 설정
DEFAULT_SAMPLE_RATE=24000
DEFAULT_CHUNK_SIZE=4800
AUDIO_BUFFER_SIZE=0.2

# WebSocket 설정
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10
MAX_WS_CONNECTIONS=100

# STT 설정
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cuda
STT_SAMPLE_RATE=16000

# TTS 설정
TTS_MAX_TEXT_LENGTH=500
TTS_DEFAULT_LANGUAGE=ko
TTS_ENABLE_STREAMING=true

# 세션 관리
SESSION_TIMEOUT_MINUTES=30
MAX_CONVERSATION_HISTORY=50

# 로깅 설정
ENABLE_CONVERSATION_LOGGING=true
ENABLE_AUDIO_LOGGING=false
LOG_RETENTION_DAYS=30

# 보안 설정
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
ENABLE_AUTH=false

# 개발 환경 설정
RELOAD=true
WORKERS=1
